{
  "chart_type": "bar",

  "parameters": {
    "orientation": {
      "value": "horizontal",
      "overridable": false
    },
    "min_fraction": {
      "value": 0.01,
      "overridable": true
    }
  },

  "data_contract": {
    "ordering": "authoritative",
    "hierarchy": {
      "assignment_field": "assignment",
      "delimiter": ".",
      "depth_equals_level": true
    }
  },

  "hierarchy_normalization": {
    "max_levels": 2,
    "drop_single_assignment_levels": true,
    "select": "deepest_adjacent"
  },

  "values": {
    "sign_mode": {
      "single_sign": "absolute",
      "mixed_sign": "signed"
    },
    "zero_line": {
      "when": "mixed_sign"
    }
  },

  "color": {
    "single_level": {
      "single_year": "period",
      "multi_year": "year"
    },
    "stacked": {
      "parent": "neutral",
      "child": "assignment"
    }
  },

  "labels": {
    "format": "{asn*} {period}",
    "omit_period_if_constant": true,
    "assignment_suffix": {
      "remove_common_prefix": true,
      "scope": "visual_level"
    }
  },

  "warnings": {
    "min_fraction_dropped": "n items below value {threshold} not shown"
  }
}
